<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}ABC Management{% endblock %}</title>
        {% block stylesheets %}            
            <link rel="stylesheet" media="screen" href="{{ asset('public/css/bootstrap/bootstrap.css') }}" />
            <link rel="stylesheet" media="screen" href="{{ asset('public/css/bootstrap/bootstrap-theme.css') }}" />
            <link rel="stylesheet" media="screen" href="{{ asset('public/css/bootstrap/bootstrap-glyphicons.css') }}" />            
            <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>

            <style type="text/css">
                html,body {
                    font-family: Arial,Helvetica,sans-serif;
                    background: #22528B;
                }

            </style>
            <link rel="stylesheet" href="{{ asset('public/css/default.css') }}" />

        {% endblock stylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('public/images/favicon.ico') }}" />
    </head>
    <body>
        <div id="wrap">
            <div class="container">
            {% block body %}{% endblock %}
        </div>
    </div>    
</div>

{% block javascripts %}
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="{{ asset('public/js/bootstrap/html5shiv.js') }}"></script>
        <script src="{{ asset('public/js/bootstrap/respond.min.js') }}"></script>
    <![endif]-->
    <script src="{{ asset('public/js/jquery-1.10.2.js') }}"></script>
    <script src="{{ asset('public/js/bootstrap/bootstrap.js') }}"></script>
    <script>
        function display_error(mssg, value) {
            
            var background=(value)?"#00D204":"#ff4040";
            $(".error_display").html('<p style="text-align:center;">' + mssg + '</p>');
            $(".error_display").css("background", background);
            $(".error_display").show();
            setTimeout(function () {
                $(".error_display").hide();
            }, 9000);
        }
    </script>
{% endblock %}

</body>
</html>