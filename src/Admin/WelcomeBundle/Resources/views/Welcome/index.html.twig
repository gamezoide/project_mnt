{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
       
       '@AdminWelcomeBundle/Resources/public/css/welcome.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />

    {% endstylesheets %}
{% endblock stylesheets %}

{% block body %}
    <div class="content-main">
        <div class="content">
            <div>
                <h2 class="title">ABC Management</h2>
                <img src="{{ asset('public/images/cabinet.png') }}">
            </div>
            <div>
                <div class="col-xs-12"><h4>What do you want to do?</h4></div>
                <div class="col-xs-3"></div>
                <div class="col-xs-2"><div class="option" title="View Users"><span class="glyphicon glyphicon-user"></span></div></div>
                <div class="col-xs-2"><div class="option" title="View projects"><span class="glyphicon glyphicon-briefcase"></span></div></div>
                <div class="col-xs-2"><div class="option" title="View projects assigned"><span class="glyphicon glyphicon-retweet"></span></div></div>
                <div class="col-xs-3"></div>
            </div>
        </div>

    </div>
{% endblock %}

{% block loader %}{% endblock %}
{# ------------   JAVASCRIPTS   -------------- #}
{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function () {
            $('.option').tooltip();
        });
    </script>
{% endblock %}
