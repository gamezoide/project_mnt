{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}    
    <link rel="stylesheet" href="{{ asset('public/css/bootstrap/datepicker.css') }}" />
{% endblock stylesheets %}

{% block body %}
    <div class="content-main">
        <div class="content">
            {% include '::menu.html.twig' with {'current':0}%}                    
            <div>
                <div class="details col-xs-12">
                    <h3>Project Data</h3>
                    <hr>
                </div>
                <form class="col-xs-12" id="data" action="{{ path('admin_project_save') }}" method="POST">
                    <div><input type="hidden" id="id" name="id" value="{% if project is not empty %}{{ project['id'] }}{% endif %}"></div>
                    <div><label>Title</label><input class="form-control" id="title" name="title" required value="{% if project is not empty %}{{ project['title'] }}{% endif %}"></div>
                    <div><label>Client</label><input class="form-control" id="client" name="client" value="{% if project is not empty %}{{ project['client'] }}{% endif %}"></div>
                    <div><label>Description</label><textarea class="form-control" id="description" name="description">{% if project is not empty %}{{ project['description'] }}{% endif %}</textarea></div>
                    <div><label>Deadline</label><input class="form-control datepicker" id="deadline" name="deadline" value="{% if project is not empty %}{{ project['deadline'] }}{% endif %}"></div>
                    <div class="buttons"><button class="btn btn-success" type="submit">Save</button><a href="{{ path( 'admin_project_homepage') }}"><button class="btn btn-default" type="button">Cancel</button></a></div>
                </form>

            </div>

        </div>

    </div>
{% endblock %}

{# ------------   JAVASCRIPTS   -------------- #}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('public/js/bootstrap/bootstrap-datepicker.js') }}"></script>
    <script>
        $('.datepicker').datepicker({format: 'yyyy-mm-dd'});
    </script>

{% endblock %}
